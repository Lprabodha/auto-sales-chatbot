{
  "intents": [
    {
      "tag": "greeting",
      "patterns": ["hi", "hello", "hey", "good morning", "good afternoon"],
      "responses": ["Hello! How can I help you with vehicles today?", "Hi there! Looking for a car or motorcycle?"]
    },
    {
      "tag": "vehicle_price_inquiry",
      "patterns": [
        "price of a car",
        "how much for a bike",
        "what's the cost of",
        "price range for",
        "how much does it cost",
        "what's the price"
      ],
      "responses": [],
      "follow_up": {
        "prompt": "Which vehicle are you interested in? (e.g., 'Honda PCX 125' or 'Suzuki Swift')",
        "expected_entities": ["brand", "model"]
      }
